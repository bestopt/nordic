<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:background="#39AAFAB7">

        <View android:id="@+id/avatar"
              android:layout_marginLeft="16dp"
              android:background="@color/colorPrimaryDark"
              android:layout_width="100dp"
              android:layout_height="110dp"
              android:layout_marginTop="15dp"/>

        <TextView android:id="@+id/name"
                  android:layout_marginLeft="16dp"
                  android:layout_marginRight="16dp"
                  android:singleLine="true"
                  android:ellipsize="middle"
                  android:layout_toRightOf="@id/avatar"
                  android:textSize="26dp"
                  android:textColor="@color/colorAccent"
                  android:text="Ivanov Ivan Ivanovich"
                  android:layout_width="match_parent"
                  android:layout_alignTop="@id/avatar"
                  android:layout_height="wrap_content"/>

        <TextView android:id="@+id/profession"
                  android:layout_toRightOf="@id/avatar"
                  android:layout_marginLeft="16dp"
                  android:layout_marginRight="16dp"
                  android:layout_alignBottom="@id/avatar"
                  android:textColor="@android:color/holo_blue_dark"
                  android:text="Android developer"
                  android:textSize="20dp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>
        <RelativeLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
        >

            <Button android:id="@+id/btnAct3left"
                    android:text="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <Button android:id="@+id/btnAct3right"
                    android:layout_toRightOf="@id/btnAct3left"
                    android:text="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>
    <View android:layout_width="wrap_content"
          android:layout_height="0dp"
          android:layout_weight="7"></View>
</LinearLayout>